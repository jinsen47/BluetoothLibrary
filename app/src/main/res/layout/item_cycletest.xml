<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_small"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    android:layout_marginBottom="@dimen/margin_wee">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_mini"
        android:paddingRight="@dimen/margin_mini">
        <TextView
            android:id="@+id/text_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            android:textAppearance="@style/AppTheme.Body1"
            tools:text="11:22:33:44:55"/>
        <TextView
            android:id="@+id/text_test_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            android:layout_below="@+id/text_mac"
            android:textAppearance="@style/AppTheme.Body1"
            tools:text="已完成次数22次"/>
        <TextView
            android:id="@+id/text_fail_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            android:layout_toRightOf="@id/text_test_times"
            android:layout_below="@+id/text_mac"
            android:textAppearance="@style/AppTheme.Body1"
            tools:text="已失败 1 次"/>
        <TextView
            android:id="@+id/text_connect_pass_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            android:layout_below="@+id/text_test_times"
            tools:text="连接成功率98%"
            android:textAppearance="@style/AppTheme.Body1"
            app:layout_widthPercent="50%"/>
        <TextView
            android:id="@+id/text_notify_pass_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            android:layout_below="@+id/text_test_times"
            android:layout_toRightOf="@+id/text_connect_pass_rate"
            tools:text="通知成功率98%"
            android:textAppearance="@style/AppTheme.Body1"
            app:layout_widthPercent="50%"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.v7.widget.CardView>
