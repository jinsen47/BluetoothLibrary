<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_small"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    android:layout_marginBottom="@dimen/margin_wee">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_mac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.Body1"
            android:layout_marginLeft="@dimen/margin_mini"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            />
        <TextView
            android:id="@+id/tv_rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.Body1"
            android:layout_marginLeft="@dimen/margin_mini"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"
            />
        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.Body1"
            android:layout_marginLeft="@dimen/margin_mini"
            android:paddingTop="@dimen/margin_wee"
            android:paddingBottom="@dimen/margin_wee"/>

    </LinearLayout>
</android.support.v7.widget.CardView>